#:kivy 1.9.0

<CustButton@Button>:
    font_size: 55

<SolverGridLayout>:
    canvas.before:
        Color:
            rgb: 29/255, 31/255, 33/255
        Rectangle:
            pos: self.pos
            size: self.size
    id: solver
    rows: 4
    padding: 10
    spacing: 10

    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            font_size: 100
            multiline: False

    BoxLayout:
        spacing: 10
        Image:
            id:image1
            source: './img/blank.png'
        Image:
            id:image2
            source: './img/blank.png'
        Image:
            id:deck
            source: solver.deck_blank[solver.count]

    BoxLayout:
        spacing: 10
        Image:
            id:image3
            source: './img/blank.png'
        Image:
            id:image4
            source: './img/blank.png'
        BoxLayout:
            spacing: 10
            orientation: 'vertical'
            CustButton:
                text: "SHUFFLE"
                on_press: solver.shuffle()
            CustButton:
                text: "DRAW"
                on_press: solver.draw()
                on_release: image1.source = solver.showncards[0][0]; image1.reload(); 
                on_release: image2.source = solver.showncards[1][0]; image2.reload();
                on_release: image3.source = solver.showncards[2][0]; image3.reload();
                on_release: image4.source = solver.showncards[3][0]; image4.reload();
                on_release: deck.source = solver.deck_blank[solver.count]; deck.reload();

    BoxLayout:
        spacing: 10
        CustButton:
            text: "SOLVE"
            on_press: entry.text = solver.solve()
